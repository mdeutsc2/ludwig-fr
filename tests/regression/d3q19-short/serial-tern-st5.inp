##############################################################################
#
#  serial-tern-st5.inp
#
#  Test for configuration similar to that of Semprebon et al (2016)
#  Figure 2, which relevant uniform solid wetting parameters.
#
#  As for st4, except using hydrodynamics and phi grad mu route.
#
#  The test is here run only for a couple of time steps.
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 2

##############################################################################
#
#  System
#
##############################################################################

size 200_200_1
grid 1_1_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.16666666666667

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy ternary

ternary_kappa1            0.01
ternary_kappa2            0.02
ternary_kappa3            0.03
ternary_alpha             1.00

ternary_h1               -0.001
ternary_h2               +0.002

ternary_mobility_phi      1.0
ternary_mobility_psi      1.0

ternary_initialisation    2d_tee

hydrodynamics             yes
fd_gradient_calculation   2d_ternary_solid
fd_force_divergence       0

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls  1_1_0
periodicity     0_0_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 2
config_at_end   no
