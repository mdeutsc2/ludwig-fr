##############################################################################
#
#  Spinodal finite difference with external chemical potential smoke test
#
#  This is force on te fluid by grad mu method.
#  We don't have any solid walls, which may be artifical, but is free
#  of complications/wetting etc.
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 10

##############################################################################
#
#  System
#
##############################################################################

size 32_32_16
grid 1_1_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.00625
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric
fe_force_method      phi_gradmu

A -0.00625
B 0.00625
K 0.004

phi0                  0.0
phi_initialisation    drop
phi_init_drop_radius  2.0
mobility              1.25
grad_mu              0.00001_0.00002_0.00003

fd_gradient_calculation   3d_27pt_fluid
fd_advection_scheme_order 1

# External chemical potential requires grad_mu method at the moment

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity       1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10
config_at_end   no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
